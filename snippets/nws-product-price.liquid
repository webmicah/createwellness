{% if product.handle == "creatine-monohydrate-gummies-270-count" or product.handle == "creatine-monohydrate-gummies-blue-raspberry-270-count" %}
  {% assign pOrg = 12600 %}
  {% assign pOrgd = 40 %}
  {% assign pSub = 10500 %}
  {% assign pSubd = 50  %}
  {% assign pon = 21000  %}
