<style>
.needsclick.kl-private-reset-css-Xuajs1 {
	display: none !important;
}
.nws-klaviyo-form .needsclick.kl-private-reset-css-Xuajs1 {
	display: flex !important;
	min-height: unset !important;
}
.nws-coming-soon {
	display: flex;
	flex-wrap: wrap;
	width: 100%;
	align-items: center;
	justify-content: center;
	padding: 0;
    height: 100vh;
}
.nws-coming-soon .nws-coming-soon-col {
	display: block;
	width: 50%;
}
.nws-coming-soon .nws-coming-soon-col img {
	width: 100%;
	display: block;
	height: 100vh;
	object-fit: cover;
	object-position: center;
}
.nws-coming-soon .nws-coming-soon-col .nws-coming-soon-col-inner {
	max-width: 460px;
	text-align: center;
	display: block;
	margin: 0 auto;
	width: 100%;
	padding: 25px 15px;
}
.nws-coming-soon .nws-coming-soon-col .nws-coming-soon-col-inner h2 {
	display: block;
	font-size: 35px;
	line-height: normal;
	font-weight: bold;
}
.nws-coming-soon .nws-coming-soon-col .nws-coming-soon-col-inner h4 {
	display: block;
	font-size: 20px;
	font-weight: 600;
	font-style: italic;
	margin-top: 15px;
}
.nws-coming-soon .nws-coming-soon-col .nws-coming-soon-col-inner p {
	margin-bottom: 0;
	font-size: 13px;
	line-height: 1.5;
	margin-top: 10px;
	color: #000;
}
.nws-coming-soon .nws-coming-soon-col .nws-coming-soon-col-inner .nws-klaviyo-form {
	margin: 0;
	margin-top: 25px;
}
@media screen and (max-width:767px){
  .nws-coming-soon .nws-coming-soon-col {
  	display: block;
  	width: 100%;
  }
  .nws-coming-soon .nws-coming-soon-col:first-child {
  	order: 2;
  }
  .nws-coming-soon .nws-coming-soon-col img {
  	height: auto;
  }
  .nws-coming-soon {
  	height: auto;
  }
}
</style>
<div class="nws-coming-soon" {% if section.settings.bg_color != blank %}style="background-color:{{ section.settings.bg_color }};"{% endif %} >
  <div class="nws-coming-soon-col" >
    {% if section.settings.bg_image != blank %}<img src="{{ section.settings.bg_image | img_url: 'master' }}" />{% endif %}
  </div>
  <div class="nws-coming-soon-col" >
     <div class="nws-coming-soon-col-inner" >
      {% if section.settings.logo_header != blank %}<h2>{{ section.settings.logo_header }}</h2>{% endif %}
      {% if section.settings.heading != blank %}<h4>{{ section.settings.heading }}</h4>{% endif %}
      {% if section.settings.content != blank %}<p>{{ section.settings.content }}</p>{% endif %}
      <div class="nws-klaviyo-form">
        <div class="klaviyo-form-S4QKtg"></div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Page settings",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "logo_header",
      "label": "Logo Heading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "content",
      "label": "Content"
    }
  ]
}
{% endschema %}