<!-- nws-faq-tabs -->
  {% if section.blocks != blank %}
    <div class="nws-faqs-section nws-faq-tabs" style="{% if section.settings.section-color != blank %}background-color:{{ section.settings.section-color }};{% endif %} {% if section.settings.section-bg != blank %}background-image:url('{{ section.settings.section-bg | img_url: 'master' }}');{% endif %}" >
      <div class="container" >
        <div class="nws-faqs-section-content nws-same-section">
          {% if section.settings.heading != blank %}<h2 class="heading-nws" >{{ section.settings.heading }}</h2>{% endif %}
          <div class="nws-faqs-section-body" >
           <div class="nws-accordion-flex">
              <div class="nws-accordion-warp nws-col-50">
                {% for block in section.blocks %}
                  {% assign g_count = g_count | plus: 1 %}
                  {% assign g_count_mod = g_count | modulo: 2 %}
                  {% if g_count_mod != 0 %}
                    <div class="nws-ac-item">
                      <h3 class="nws-ac-title">{{ block.settings.accordion_title }}</h3>
                      <div class="nws-ac-body">{{ block.settings.accordion_info }}</div>
                    </div>
                  {% endif %}
                {% endfor %}
              </div>
              <div class="nws-accordion-warp nws-col-50">
                {% for block in section.blocks %}
                  {% assign g_count2 = g_count2 | plus: 1 %}
                  {% assign g_count_mod2 = g_count2 | modulo: 2 %}
                  {% if g_count_mod2 == 0 %}
                    <div class="nws-ac-item">
                      <h3 class="nws-ac-title">{{ block.settings.accordion_title }}</h3>
                      <div class="nws-ac-body">{{ block.settings.accordion_info }}</div>
                    </div>
                  {% endif %}
                {% endfor %}
              </div>
            </div> 
          </div>
          {% if section.settings.btn-txt != blank %}<a class="btn-nws" href="{{ section.settings.btn-link }}" >{{ section.settings.btn-txt }}</a>{% endif %}
        </div>
      </div>
    </div>
  {% endif %}
<!-- end nws-faq-tabs -->
{% schema %}
  {
    "name": "NWS - FAQs",
    "settings": [
        {
          "type": "color",
          "id": "section-color",
          "label": "Section BG Color"
        },
        {
          "type": "image_picker",
          "id": "section-bg",
          "label": "Section BG Image"
        },
        {
          "type": "header",
          "content": "Heading"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Section Heading"
        },
        {
          "type": "header",
          "content": "Button"
        },
        {
          "type": "text",
          "id": "btn-txt",
          "label": "Button Text"
        },
        {
          "type": "url",
          "id": "btn-link",
          "label": "Button Link"
        }
    ],
    "blocks": [
    {
      "type": "text",
      "name": "NWS FAQs Accordian",
      "settings": [
        {
          "type": "text",
          "id": "accordion_title",
          "label": "Title"	
        },
        {
          "type": "textarea",
          "id": "accordion_info",
          "label": "Paragraph"	
        }
      ]
    }
   ]
  }
{% endschema %}