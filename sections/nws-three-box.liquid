<!-- nws-three-box -->
  {% if section.blocks != blank %}
    <div class="nws-three-box" style="{% if section.settings.section-color != blank %}background-color:{{ section.settings.section-color }};{% endif %} {% if section.settings.section-bg != blank %}background-image:url('{{ section.settings.section-bg | img_url: 'master' }}');{% endif %}" >
      <div class="container" >
        <div class="nws-three-box-content nws-same-section">
          {% if section.settings.heading != blank %}<h2 class="heading-nws" >{{ section.settings.heading }}</h2>{% endif %}
          <div class="nws-three-box-body" >
           {% for block in section.blocks %}
             <div class="nws-three-box-inner" >
               <div class="nws-three-box-iner" >
                  {% if block.settings.b-image != blank %}<img src="{{ block.settings.b-image | img_url: '70x' }}" />{% endif %}
                  {% if block.settings.b-heading != blank %}<span class="nws-box-h" >{{ block.settings.b-heading }}</span>{% endif %}
                  {% if block.settings.b-txt != blank %}<span class="nws-box-p" >{{ block.settings.b-txt }}</span>{% endif %}
               </div>
             </div>
            {% endfor %}
          </div>
          {% if section.settings.btn-txt != blank %}<a class="btn-nws" href="{{ section.settings.btn-link }}" >{{ section.settings.btn-txt }}</a>{% endif %}
        </div>
      </div>
    </div>
  {% endif %}
<!-- end nws-three-box -->
{% schema %}
  {
    "name": "NWS - Three Box",
    "settings": [
        {
          "type": "color",
          "id": "section-color",
          "label": "Section BG Color"
        },
        {
          "type": "image_picker",
          "id": "section-bg",
          "label": "Section BG Image"
        },
        {
          "type": "header",
          "content": "Heading"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Section Heading"
        },
        {
          "type": "header",
          "content": "Button"
        },
        {
          "type": "text",
          "id": "btn-txt",
          "label": "Button Text"
        },
        {
          "type": "url",
          "id": "btn-link",
          "label": "Button Link"
        }
    ],
    "blocks": [
    {
      "type": "box",
      "name": "Box Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "b-image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "b-heading",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "b-txt",
          "label": "Content"
        }
      ]
    }
  ],
    "presets": [
        {
          "name": "NWS - Three Box",
          "category": "NWS Sections"
        }
    ]
  }
{% endschema %}