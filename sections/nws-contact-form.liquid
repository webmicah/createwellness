<!-- nws-contact-form -->
  <div class="nws-contact-form">
    <div class="container">
      <div class="nws-inner-container nws-same-section">
        <div class="nws-form-text">
          {% if section.settings.heading != blank %}<h2 class="heading-nws" >{{ section.settings.heading }}</h2>{% endif %}
          {% if section.settings.sub-heading != blank %}<span class="sub-heading-nws" >{{ section.settings.sub-heading }}</span>{% endif %}
        </div>
        {%- assign formId = 'ContactForm' -%}
        {%- form 'contact', class: 'contact-form' -%}
        {% render 'form-status', form: form, form_id: formId %}
        <div class="row">
          <div class="col-12 col-sm-6">
            <div data-aos="zoom-in" data-aos-delay="1100" class="first-name nws-form-input-warp">
              <label class="nws-form-label" for="first-name">First Name {% if section.settings.name_check == true %}*{%endif%}</label>
              <input class="nws-form-input" type="text" name="contact[first_name]" id="first-name" placeholder="First Name {% if section.settings.name_check == true %}*{%endif%}" {% if section.settings.name_check == true %}required=""{%endif%} />
            </div>
          </div>
          <div class="col-12 col-sm-6">
            <div data-aos="zoom-in" data-aos-delay="1150" class="last-name nws-form-input-warp">
              <label class="nws-form-label" for="last-name">Last Name {% if section.settings.name_check == true %}*{%endif%}</label>
              <input class="nws-form-input" type="text" name="contact[last_name]" id="last-name" placeholder="Last Name {% if section.settings.name_check == true %}*{%endif%}" {% if section.settings.name_check == true %}required=""{%endif%} />
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <div data-aos="zoom-in" data-aos-delay="1200" class="email nws-form-input-warp">
              <label class="nws-form-label" for="email">Email Address {% if section.settings.email_check == true %}*{%endif%}</label>
              <input class="nws-form-input" type="email" name="contact[email]" id="email" placeholder="Email Address {% if section.settings.email_check == true %}*{%endif%}" {% if section.settings.email_check == true %}required=""{%endif%} />
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <div data-aos="zoom-in" data-aos-delay="1300" class="phone nws-form-input-warp">
              <label class="nws-form-label" for="phone">Phone Number {% if section.settings.phone_check == true %}*{%endif%}</label>
              <input class="nws-form-input" type="tel" name="contact[phone]" id="phone" placeholder="Phone Number {% if section.settings.phone_check == true %}*{%endif%}" {% if section.settings.phone_check == true %}required=""{%endif%} />
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <div data-aos="zoom-in" data-aos-delay="1400" class="questions nws-form-input-warp">
              <select class="nws-form-input" id="Contactquestions" name="contact[questions]" {% if section.settings.help_check == true %}required=""{%endif%}>
                <option>How Can We Help? {% if section.settings.help_check == true %}*{%endif%}</option>
                {% for block in section.blocks %}
                	<option value="{{ block.settings.option_title }}">{{ block.settings.option_title }}</option>
                {% endfor %}
              </select>
            </div>
          </div>
        </div>
  
        <div class="row">
          <div class="col-12">
            <div data-aos="zoom-in" data-aos-delay="1500" class="order-number nws-form-input-warp">
              <label class="nws-form-label" for="order-number">Order Number (optional) {% if section.settings.order_check == true %}*{%endif%}</label>
              <input class="nws-form-input" type="text" name="contact[order_number]" id="order-number"  placeholder="Order Number {% if section.settings.order_check == true %}*{%endif%}" {% if section.settings.order_check == true %}required=""{%endif%} />
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <div data-aos="zoom-in" data-aos-delay="1600" class="message nws-form-input-warp">
              <label for="cmessage" class="nws-form-label nws-form-textarea-label">{{ 'contact.form.message' | t }} {% if section.settings.message_check == true %}*{%endif%}</label>
              <textarea class="form-control nws-form-input" cols="30" rows="4" id="cmessage" name="contact[body]" required="" placeholder="{{ 'contact.form.message' | t }} {% if section.settings.message_check == true %}*{%endif%}" {% if section.settings.message_check == true %}required=""{%endif%}></textarea>
            </div>
          </div>
        </div>
        <button data-aos="zoom-in" data-aos-delay="1650" type="submit" class="btn-nws">SUBMIT</button>
        {%- endform -%}
      </div>  
    </div>
  </div>
<!-- end nws-contact-form -->
{% schema %}
 {
  "name": "Contact Form",
  "settings": [
    {
      "type": "header",
      "content": "Heading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading"
    },
    {
      "type": "textarea",
      "id": "sub-heading",
      "label": "Section Sub-Heading"
    },
    {
      "type": "checkbox",
      "id": "name_check",
      "label": "Name (Required)"
    },
    {
      "type": "checkbox",
      "id": "email_check",
      "label": "Email (Required)"
    },
    {
      "type": "checkbox",
      "id": "phone_check",
      "label": "Phone (Required)"
    },
    {
      "type": "checkbox",
      "id": "help_check",
      "label": "Help Field (Required)"
    },
    {
      "type": "checkbox",
      "id": "order_check",
      "label": "Order Number (Required)"
    },
    {
      "type": "checkbox",
      "id": "message_check",
      "label": "Subject (Required)"
    }
  ],
    "blocks": [
      {
        "type": "item",
        "name": "How Can We Help?",
        "settings": [
          {
            "type": "text",
            "id": "option_title",
            "label": "Option"
          }
        ]
      }
    ]
  }
{% endschema %}