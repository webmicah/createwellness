<!-- nws-app-review -->
  {% if section.settings.review-code != blank %}
    <div class="nws-app-review" style="{% if section.settings.section-color != blank %}background-color:{{ section.settings.section-color }};{% endif %} {% if section.settings.section-bg != blank %}background-image:url('{{ section.settings.section-bg | img_url: 'master' }}');{% endif %}" >
      <div class="container" >
        <div class="nws-app-review-content nws-same-section">
          {% if section.settings.heading != blank %}<h2 class="heading-nws" >{{ section.settings.heading }}</h2>{% endif %}
          <div class="nws-app-review-body" >
            {{ section.settings.review-code }}
          </div>
          {% if section.settings.btn-txt != blank %}<a class="btn-nws" href="{{ section.settings.btn-link }}" >{{ section.settings.btn-txt }}</a>{% endif %}
        </div>
      </div>
    </div>
  {% endif %}
<!-- end nws-app-review -->
{% schema %}
  {
    "name": "NWS - App Review",
    "settings": [
        {
          "type": "color",
          "id": "section-color",
          "label": "Section BG Color"
        },
        {
          "type": "image_picker",
          "id": "section-bg",
          "label": "Section BG Image"
        },
        {
          "type": "header",
          "content": "Heading"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Section Heading"
        },
        {
          "type": "header",
          "content": "Reviews"
        },
        {
          "type": "html",
          "id": "review-code",
          "label": "Reviews Code"
        },
        {
          "type": "header",
          "content": "Button"
        },
        {
          "type": "text",
          "id": "btn-txt",
          "label": "Button Text"
        },
        {
          "type": "url",
          "id": "btn-link",
          "label": "Button Link"
        }
    ],
    "presets": [
        {
          "name": "NWS - App Review",
          "category": "NWS Sections"
        }
    ]
  }
{% endschema %}