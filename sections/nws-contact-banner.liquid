<!-- nws-page-banner / nws-contact-banner -->
  <div class="nws-page-banner nws-contact-banner" style="{% if section.settings.section-color != blank %}background-color:{{ section.settings.section-color }};{% endif %} {% if section.settings.section-bg != blank %}background-image:url('{{ section.settings.section-bg | img_url: 'master' }}');{% endif %}" >
    {% render 'kt_breadcrumb' %}
    <div class="container" >
      <div class="nws-page-banner-content nws-same-section">
        {% if section.settings.heading != blank %}<h2 class="heading-nws" >{{ section.settings.heading }}</h2>{% endif %}
        {% if section.settings.sub-heading != blank %}<span class="sub-heading-nws" >{{ section.settings.sub-heading }}</span>{% endif %}
        <div class="nws-contact-banner-body" >
         {% for block in section.blocks %}
           <div class="nws-contact-banner-inner" >
             <div class="nws-contact-banner-iner" >
                {% if block.settings.b-image != blank %}<img src="{{ block.settings.b-image | img_url: '70x' }}" />{% endif %}
                {% if block.settings.b-heading != blank %}<h4 class="nws-box-h" >{{ block.settings.b-heading }}</h4>{% endif %}
                {% if block.settings.b-txt != blank %}<a class="nws-box-link" href="{{ block.settings.b-txt-url }}" >{{ block.settings.b-txt }}</a>{% endif %}
             </div>
           </div>
          {% endfor %}
        </div>
        {% if section.settings.btn-txt != blank %}<a class="btn-nws" href="{{ section.settings.btn-link }}" >{{ section.settings.btn-txt }}</a>{% endif %}
      </div>
    </div>
  </div>
<!-- end nws-page-banner / nws-contact-banner  -->
{% schema %}
  {
    "name": "NWS - Page Banner",
    "settings": [
        {
          "type": "color",
          "id": "section-color",
          "label": "Section BG Color"
        },
        {
          "type": "image_picker",
          "id": "section-bg",
          "label": "Section BG Image"
        },
        {
          "type": "header",
          "content": "Heading"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Section Heading"
        },
        {
          "type": "textarea",
          "id": "sub-heading",
          "label": "Section Sub-Heading"
        },
        {
          "type": "header",
          "content": "Button"
        },
        {
          "type": "text",
          "id": "btn-txt",
          "label": "Button Text"
        },
        {
          "type": "url",
          "id": "btn-link",
          "label": "Button Link"
        }
    ],
    "blocks": [
    {
      "type": "box",
      "name": "Box Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "b-image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "b-heading",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "b-txt",
          "label": "Text"
        },
        {
          "type": "url",
          "id": "b-txt-url",
          "label": "Text Link"
        }
      ]
    }
   ]
  }
{% endschema %}