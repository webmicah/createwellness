<!-- nws-video-slider -->
<!--<iframe style="width: 100%; height: 739px; display: block;" src="https://www.tiktok.com/embed/v2/7122113094360321323"></iframe>-->
{% if section.blocks != blank %}
    <div class="nws-video-slider" style="{% if section.settings.section-color != blank %}background-color:{{ section.settings.section-color }};{% endif %} {% if section.settings.section-bg != blank %}background-image:url('{{ section.settings.section-bg | img_url: 'master' }}');{% endif %}" >
      <div class="container" >
        <div class="nws-video-slider-content nws-same-section">
          {% if section.settings.heading != blank %}<h2 class="heading-nws" >{{ section.settings.heading }}</h2>{% endif %}
          {% if section.settings.sub-heading != blank %}<span class="sub-heading-nws" >{{ section.settings.sub-heading }}</span>{% endif %}
          <div class="nws-video-slider-body" >
           {% for block in section.blocks %}
             <div class="nws-video-slider-inner" >
               <div class="nws-video-slider-iner" >
                  {% if block.settings.video-ids != blank %}
                    <iframe style="width: 100%; height: 740px; display: block;" src="https://www.tiktok.com/embed/v2/{{ block.settings.video-ids }}"></iframe>
                    {% else %}
                      {% if section.settings.video_url.type == "youtube" %}
                        <iframe src="//www.youtube.com/embed/{{ section.settings.video_url.id }}?vq=720" width="1060" height="600" frameborder="0" allowfullscreen></iframe>
                      {% elsif section.settings.video_url.type == "vimeo" %}
                        <iframe src="//player.vimeo.com/video/{{ section.settings.video_url.id }}?byline=0&portrait=0&badge=0" width="1060" height="600" frameborder="0" allowfullscreen></iframe>
                      {% endif %}
                  {% endif %}
               </div>
             </div>
            {% endfor %}
          </div>
          {% if section.settings.btn-txt != blank %}<a class="btn-nws" href="{{ section.settings.btn-link }}" >{{ section.settings.btn-txt }}</a>{% endif %}
        </div>
      </div>
    </div>
  {% endif %}
<!-- end nws-video-slider -->
{% schema %}
  {
    "name": "NWS - Video Slider",
    "settings": [
        {
          "type": "color",
          "id": "section-color",
          "label": "Section BG Color"
        },
        {
          "type": "image_picker",
          "id": "section-bg",
          "label": "Section BG Image"
        },
        {
          "type": "header",
          "content": "Heading"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Section Heading"
        },
        {
          "type": "textarea",
          "id": "sub-heading",
          "label": "Section Sub-Heading"
        },
        {
          "type": "header",
          "content": "Button"
        },
        {
          "type": "text",
          "id": "btn-txt",
          "label": "Button Text"
        },
        {
          "type": "url",
          "id": "btn-link",
          "label": "Button Link"
        }
    ],
    "blocks": [
    {
      "type": "video",
      "name": "Video Item",
      "settings": [
        {
        "type": "video_url",
        "id": "video_url",
        "label": "Video link",
        "accept": ["youtube", "vimeo"]
       },
        {
          "type": "text",
          "id": "video-ids",
          "label": "Video ID (Only TikTok)"
        }
      ]
    }
  ],
    "presets": [
        {
          "name": "NWS - Video Slider",
          "category": "NWS Sections"
        }
    ]
  }
{% endschema %}